{
    "name": "aurora",
    "version": "1.0.0",
    "description": "crypto finances made accessible for businesses.",
    "main": "index.js",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "format:backend": "npx prettier -w apps/backend/src/**/*.ts",
        "lint:backend": "npm run format:backend && npx eslint --ext .ts,.json,.prisma --fix-dry-run",
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev:frontend": "NODE_ENV=development npm run dev --workspace=frontend",
        "dev:backend": "NODE_ENV=development npm run dev --workspace=backend",
        "generate": "npm run generate --workspace=backend",
        "reset": "npm run reset --workspace=backend",
        "studio": "npm run studio --workspace=backend"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tot/aurora.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/tot/aurora/issues"
    },
    "homepage": "https://github.com/tot/aurora#readme"
}
