{
    "name": "flux",
    "version": "1.0.0",
    "description": "supercharged crypto finances for businesses.",
    "main": "index.js",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "format:frontend": "npm run format --workspace=frontend",
        "format:backend": "npm run format --workspace=backend",
        "format": "npm-run-all -s format:backend format:frontend",
        "lint:frontend": "npm run lint --workspace=frontend",
        "lint:backend": "npm run lint --workspace=backend",
        "lint": "npm-run-all -s lint:backend lint:frontend",
        "test": "npm run test --workspace=backend",
        "dev:frontend": "npm run dev --workspace=frontend",
        "dev:backend": "npm run dev --workspace=backend",
        "dev": "npm-run-all -p dev:backend dev:frontend",
        "build:prisma": "npm run build --workspace=@flux/prisma",
        "generate:local": "npm run generate:local --workspace=@flux/prisma",
        "generate": "npm run generate --workspace=@flux/prisma",
        "reset:local": "npm run reset:local --workspace=@flux/prisma",
        "reset": "npm run reset --workspace=@flux/prisma",
        "studio": "npm run studio --workspace=@flux/prisma",
        "storybook": "npm run storybook --workspace=frontend",
        "build-storybook": "npm run storybook --workspace=frontend"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/flux-crypto.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/flux-crypto/issues"
    },
    "homepage": "https://github.com/flux-crypto/#readme",
    "devDependencies": {
        "@babel/core": "^7.20.12",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.18.6",
        "@prisma/client": "^4.8.1",
        "@storybook/addon-actions": "^6.5.15",
        "@storybook/addon-essentials": "^6.5.15",
        "@storybook/addon-interactions": "^6.5.15",
        "@storybook/addon-links": "^6.5.15",
        "@storybook/builder-webpack5": "^6.5.15",
        "@storybook/manager-webpack5": "^6.5.15",
        "@storybook/react": "^6.5.15",
        "@storybook/testing-library": "^0.0.13",
        "@types/jest": "^29.2.5",
        "@types/jsonwebtoken": "^9.0.1",
        "babel-jest": "^29.3.1",
        "babel-loader": "^8.3.0",
        "jest": "^29.3.1",
        "jest-junit": "^15.0.0",
        "npm-run-all": "^4.1.5",
        "prisma": "^4.8.1",
        "prisma-docs-generator": "^0.5.0",
        "run-script-os": "^1.1.6",
        "ts-jest": "^29.0.5"
    },
    "jest-junit": {
        "outputDirectory": "apps/backend/reports",
        "outputName": "jest-junit.xml",
        "ancestorSeparator": " â€º ",
        "uniqueOutputName": "false",
        "suiteNameTemplate": "{filepath}",
        "classNameTemplate": "{classname}",
        "titleTemplate": "{title}"
    }
}
