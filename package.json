{
    "name": "aurora",
    "version": "1.0.0",
    "description": "crypto finances made accessible for businesses.",
    "main": "index.js",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "format:frontend": "npm run format --workspace=frontend",
        "format:backend": "npm run format --workspace=backend",
        "lint:frontend": "npm run lint --workspace=frontend",
        "lint:backend": "npm run lint --workspace=backend",
        "lint": "npm run lint:backend && npm run lint:frontend",
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev:frontend": "npm run dev --workspace=frontend",
        "dev:backend": "npm run dev --workspace=backend",
        "reset": "npm run reset --workspace=@aurora/prisma",
        "studio": "npm run studio --workspace=@aurora/prisma"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tot/aurora.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/tot/aurora/issues"
    },
    "homepage": "https://github.com/tot/aurora#readme",
    "devDependencies": {
        "@prisma/client": "^4.8.1",
        "prisma": "^4.8.1",
        "prisma-docs-generator": "^0.5.0"
    }
}
