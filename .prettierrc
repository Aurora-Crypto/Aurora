{
    "semi": true,
    "trailingComma": "none",
    "singleQuote": false,
    "tabWidth": 4,
    "useTabs": false,
    "importOrder": [
        "^@?(?!src|lib|docs|routes|plugins|layouts|pages|components|stories|contexts)\\w+",
        "^@plugins/(.*)$",
        "^@(src|routes|lib|contexts)/(.*)$",
        "^@(pages|components|stories|layouts)/(.*)$",
        "^@docs/(.*)$",
        "^..?/"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
