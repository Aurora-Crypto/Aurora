generator client {
    provider = "prisma-client-js"
}

generator docs {
    provider = "node ../../node_modules/prisma-docs-generator serve"
    output   = "../docs"
}

generator jsonSchema {
    provider = "prisma-json-schema-generator"
    output   = "../docs/schemas"
}

datasource db {
    provider = "mongodb"
    url      = env("DB_URL")
}

model Wallet {
    address     String   @id @map("_id")
    seedPhrase  String   @default("") //optional
    rdUserIds   String[] // read-only
    rdUsers     User[]   @relation(fields: [rdUserIds], references: [id], name: "readOnly")
    rdwrUserIds String[] // read-write
    rdwrUsers   User[]   @relation(fields: [rdwrUserIds], references: [id], name: "readWrite")
}

type WalletName {
    address String
    name    String
}

type ImportTransaction {
    id               String   @default(uuid())
    date             DateTime @default(now())
    receivedQuantity Float    @default(0)
    receivedCurrency String   @default("")
    sentQuantity     Float    @default(0)
    sentCurrency     String   @default("")
    feeAmount        Float    @default(0)
    feeCurrency      String   @default("")
    tag              String   @default("") // optional
}

type ChainTransaction {
    hash String
    tag  String @default("") //optional
}

model User {
    id                  String              @id @map("_id")
    apiKey              String              @unique @default("")
    processorAPIKeys    String[]
    exchangeAPIKeys     String[]
    rdWalletAddresses   String[] // read-only
    rdWallets           Wallet[]            @relation(fields: [rdWalletAddresses], references: [address], name: "readOnly")
    rdwrWalletAddresses String[] // read-write
    rdwrWallets         Wallet[]            @relation(fields: [rdwrWalletAddresses], references: [address], name: "readWrite")
    walletNames         WalletName[]
    importTransactions  ImportTransaction[]
    chainTransactions   ChainTransaction[]

    @@index([walletNames.address, importTransactions.id, chainTransactions.hash])
}
