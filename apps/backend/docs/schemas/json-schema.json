{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Wallet": {
      "type": "object",
      "properties": {
        "address": {
          "type": "string"
        },
        "seedPhrase": {
          "type": [
            "string",
            "null"
          ],
          "default": ""
        },
        "rdUsers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/User"
          }
        },
        "rdwrUsers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/User"
          }
        }
      },
      "required": [
        "address",
        "rdUserIds",
        "rdwrUserIds"
      ]
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "name": {
          "type": [
            "string",
            "null"
          ]
        },
        "processorAPIKeys": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "exchangeAPIKeys": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rdWallets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Wallet"
          }
        },
        "rdwrWallets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Wallet"
          }
        },
        "walletNames": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/WalletName"
          }
        },
        "transactions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Transaction"
          }
        }
      },
      "required": [
        "email",
        "processorAPIKeys",
        "exchangeAPIKeys",
        "rdWalletAddresses",
        "rdwrWalletAddresses"
      ]
    },
    "Transaction": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "hash": {
          "type": [
            "string",
            "null"
          ]
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "receivedQuantity": {
          "type": "number",
          "default": 0
        },
        "receivedCurrency": {
          "type": "string",
          "default": ""
        },
        "sentQuantity": {
          "type": "number",
          "default": 0
        },
        "sentCurrency": {
          "type": "string",
          "default": ""
        },
        "feeAmount": {
          "type": "number",
          "default": 0
        },
        "feeCurrency": {
          "type": "string",
          "default": ""
        },
        "tag": {
          "type": [
            "string",
            "null"
          ],
          "default": "PAYMENT"
        }
      },
      "required": []
    },
    "WalletName": {
      "type": "object",
      "properties": {
        "address": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "address",
        "name"
      ]
    }
  },
  "type": "object",
  "properties": {
    "wallet": {
      "$ref": "#/definitions/Wallet"
    },
    "user": {
      "$ref": "#/definitions/User"
    }
  }
}