{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "name": {
                    "type": ["string", "null"]
                },
                "wallets": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Wallet"
                    }
                }
            },
            "required": ["email"]
        },
        "Wallet": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "address": {
                    "type": "string"
                },
                "user": {
                    "$ref": "#/definitions/User"
                },
                "readOnly": {
                    "type": ["boolean", "null"],
                    "default": true
                },
                "seedPhrase": {
                    "type": ["string", "null"],
                    "default": ""
                }
            },
            "required": ["address", "userId"]
        }
    },
    "type": "object",
    "properties": {
        "user": {
            "$ref": "#/definitions/User"
        },
        "wallet": {
            "$ref": "#/definitions/Wallet"
        }
    }
}
