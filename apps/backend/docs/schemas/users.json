{
    "GetUsersSchema": {
        "schema": {
            "description": "Gets users data.",
            "tags": ["users"],
            "summary": "Get users data.",
            "response": {
                "200": {
                    "description": "OK",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": { "type": "string" },
                            "email": { "type": "string" },
                            "name": { "type": "string" },
                            "wallets": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "5XX": {
                    "description": "Unexpected error.",
                    "type": "object",
                    "properties": {
                        "code": { "type": "number" },
                        "message": { "type": "string" }
                    }
                }
            }
        }
    },
    "PostUsersSchema": {
        "schema": {
            "description": "Creates a new user based on supplied email.",
            "tags": ["users"],
            "summary": "Creates new user.",
            "body": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "user email"
                    }
                }
            },
            "response": {
                "201": {
                    "description": "Successful creation.",
                    "type": "object",
                    "properties": {
                        "id": { "type": "string" },
                        "email": { "type": "string" },
                        "name": { "type": "string" },
                        "wallets": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "400": {
                    "description": "Bad request. Missing email parameter.",
                    "type": "object",
                    "properties": {
                        "code": { "type": "number" },
                        "message": { "type": "string" }
                    }
                },
                "5XX": {
                    "description": "Unexpected error.",
                    "type": "object",
                    "properties": {
                        "code": { "type": "number" },
                        "message": { "type": "string" }
                    }
                }
            }
        }
    }
}
