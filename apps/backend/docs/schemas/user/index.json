{
    "get": {
        "schema": {
            "description": "Gets user data based on supplied user id.",
            "tags": ["user"],
            "summary": "Get user data.",
            "params": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "string",
                        "description": "user id"
                    }
                }
            },
            "response": {
                "200": {
                    "description": "OK",
                    "type": "object",
                    "properties": {
                        "id": { "type": "string" },
                        "email": { "type": "string" },
                        "name": { "type": "string" },
                        "wallets": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "404": {
                    "description": "Not found. Missing user id parameter.",
                    "type": "object",
                    "properties": {
                        "code": { "type": "number" },
                        "message": { "type": "string" }
                    }
                },
                "5XX": {
                    "description": "Unexpected error.",
                    "type": "object",
                    "properties": {
                        "code": { "type": "number" },
                        "message": { "type": "string" }
                    }
                }
            }
        }
    }
}
