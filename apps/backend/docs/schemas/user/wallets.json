{
    "post": {
        "schema": {
            "description": "Creates a wallet based on supplied wallet address and links to provided user id.",
            "tags": ["user"],
            "summary": "Creates user wallet.",
            "params": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "string",
                        "description": "user id"
                    }
                }
            },
            "body": {
                "type": "object",
                "properties": {
                    "walletAddress": { "type": "string" }
                }
            },
            "response": {
                "201": {
                    "description": "Successful creation and linking.",
                    "type": "object",
                    "properties": {
                        "id": { "type": "string" },
                        "address": { "type": "string" },
                        "userId": { "type": "string" },
                        "readOnly": { "type": "boolean" },
                        "seedPhrase": { "type": "string" }
                    }
                },
                "404": {
                    "description": "Not found. Missing user id or wallet address parameter.",
                    "type": "object",
                    "properties": {
                        "code": { "type": "number" },
                        "message": { "type": "string" }
                    }
                },
                "5XX": {
                    "description": "Unexpected error.",
                    "type": "object",
                    "properties": {
                        "code": { "type": "number" },
                        "message": { "type": "string" }
                    }
                }
            }
        }
    },
    "delete": {
        "schema": {
            "description": "Deletes (unlinks) a wallet based on supplied user id and wallet address.",
            "tags": ["user"],
            "summary": "Deletes user wallet.",
            "params": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "string",
                        "description": "user id"
                    }
                }
            },
            "body": {
                "type": "object",
                "properties": {
                    "walletAddress": { "type": "string" }
                }
            },
            "response": {
                "204": {
                    "description": "Successful deletion and unlinking.",
                    "type": "null"
                },
                "404": {
                    "description": "Not found. Missing user id or wallet address parameter.",
                    "type": "object",
                    "properties": {
                        "code": { "type": "number" },
                        "message": { "type": "string" }
                    }
                },
                "5XX": {
                    "description": "Unexpected error.",
                    "type": "object",
                    "properties": {
                        "code": { "type": "number" },
                        "message": { "type": "string" }
                    }
                }
            }
        }
    }
}
