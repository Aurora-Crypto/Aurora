{
    "extends": "../../tsconfig.build.json",
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Server",
    "compilerOptions": {
        "composite": true,
        "module": "CommonJS",
        "rootDir": ".",
        "outDir": "build",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "@lib/*": ["src/lib/*"],
            "@routes/*": ["src/routes/*"],
            "@plugins/*": ["src/plugins/*"]
        },
        "strictNullChecks": true
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.json", "**/*.d.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
