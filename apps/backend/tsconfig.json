{
    "extends": "../../tsconfig.build.json",
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Server",
    "compilerOptions": {
        "composite": true,
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "build",
        "baseUrl": ".",
        "paths": {
            "@backend/*": ["src/*"]
        },
        "strictNullChecks": true
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
