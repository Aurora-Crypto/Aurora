{
    "name": "backend",
    "version": "0.1.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "format": "npx prettier -w src/**/*.ts",
        "lint": "npm run format && npx eslint --ext .ts,.json,.prisma --fix-dry-run",
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "doppler run npm run build && node build/index.js",
        "dev": "doppler run npx nodemon && npm run open_docs_mac",
        "open_docs_win": "start http://localhost:8000/docs",
        "open_docs_mac": "open http://localhost:8000/docs",
        "build": "rimraf ./build && tsc",
        "generate": "doppler run npx prisma generate",
        "reset": "doppler run npx prisma db seed",
        "studio": "doppler run npx prisma studio"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tot/aurora.git"
    },
