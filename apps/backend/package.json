        "@prisma/client": "^4.8.0",
        "alchemy-sdk": "^2.2.5",
        "ethers": "^5.7.2",
        "fastify": "^4.10.2",
        "fastify-plugin": "^4.4.0",
        "fs": "^0.0.1-security",
        "lodash": "^4.17.21",
        "nodemon": "^2.0.20",
        "pino": "^8.8.0",
